@model CMS.Models.Category
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="tuvan col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-controller="categoryPostController">
    <input type="hidden" value="@Model.idCategory" id="idCategory" />
    <!--Banner-->
    <div class="banner col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <img src="~/Content/Front/Image/tuvan/banner-bg.png" alt="Banner" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" />
        <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            Chúng tôi luôn luôn sẵn sàng tư vấn cho bạn một cách hoàn hảo cho
            căn nhà của bạn lộng lẫy hơn bao giờ hết.
        </p>
    </div>

    <!--Phần thân-->
    <article class="noidung col-xs-12 col-sm-12 col-md-12 col-lg-12">

        <div class="sidebar-topic col-xs-12 col-sm-12 col-md-12 col-lg-12">

            <!--Cột bên trái-->
            @Html.Partial("_MenuLeft")

            <!--Các bài viết-->
            <div class="cacbaiviet col-xs-12 col-sm-12 col-md-9 col-lg-9">

                <!--Phần bài viết-->
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <!--Bài viết-->
                    <div class="baiviet col-xs-12 col-sm-12 col-md-12 col-lg-12" dir-paginate="(index, value) in posts | itemsPerPage:5">
                        <!--Lẻ-->
                        <img ng-src="{{value.image}}" alt="{{value.title}}" ng-show="index%2==0" class="col-xs-12 col-sm-5 col-md-5 col-lg-5" />
                        <div class="text col-xs-12 col-sm-7 col-md-7 col-lg-7" ng-show="index%2==0">
                            <p class="tieude col-xs-12 col-sm-12 col-md-12 col-lg-12">{{value.title}}</p>
                            <p class="tomtat col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-bind-html="value.content | limitTo: 300"></p>
                            <a href="/bai-viet/{{value.alias}}-{{value.idPost}}">Xem thêm</a>
                        </div>

                        <!--Chẵn-->
                        <div class="text col-xs-12 col-sm-7 col-md-7 col-lg-7" ng-show="index%2==1">
                            <p class="tieude col-xs-12 col-sm-12 col-md-12 col-lg-12">{{value.title}}</p>
                            <p class="tomtat col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-bind-html="value.content | limitTo: 300"></p>
                            <a href="/bai-viet/{{value.alias}}-{{value.idPost}}">Xem thêm</a>
                        </div>
                        <img ng-src="{{value.image}}" alt="{{value.title}}" class="col-xs-12 col-sm-5 col-md-5 col-lg-5" ng-show="index%2==1" />
                    </div>
                </div>

                <!--Số trang-->
                <div class="num-page col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <dir-pagination-controls></dir-pagination-controls>
                </div>
            </div>

            <!--Phần bên dưới - chỉ dành cho tablet và mobile-->
            <aside class="mobile col-xs-12 col-sm-12 hidden-md hidden-lg">
                <div class="sidebar col-xs-12 col-sm-4">
                    <a href="/danh-muc-san-pham" class="line-1 col-xs-12 col-sm-12">Sản phẩm</a>
                    <a href="/danh-mua-bai-viet/khong-gian-dep-3" class="line-2 col-xs-12 col-sm-12">Không gian đẹp</a>
                </div>

                <!--Bài viết liên quan-->
                <div class="baivietlienquan col-xs-12 col-sm-8">
                    <p class="col-xs-12 col-sm-12">Bài viết liên quan</p>
                    <div class="khung col-xs-12 col-sm-12">
                        <div class="col-xs-12 col-sm-4" dir-paginate="(index, value) in congTrinhTieuBieus | itemsPerPage:3">
                            <a href="/bai-viet/{{value.alias}}-{{value.idPost}}">
                                <img ng-src="{{value.image}}" alt="{{value.title}}" /><br />
                                {{value.title}}
                            </a>
                        </div>
                    </div>
                </div>
            </aside>
        </div>

        <!--Bài viết liên quan-->
        <div class="baivietlienquan hidden-xs hidden-sm col-md-12 col-lg-12">
            <p class="col-md-12 col-lg-12">Bài viết liên quan</p>
            <div class="col-md-12 col-lg-12 border-slide">
                <div class="well">
                    <div id="myCarousel" class="carousel slide all">
                        <!-- Carousel items -->
                        <div class="carousel-inner pic">
                            <div class="item active">
                                <div class="row">
                                    <div class="col-sm-3 frame" dir-paginate="(index, value) in congTrinhTieuBieus | itemsPerPage:4">
                                        <a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="thumbnail">
                                            <img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive"><br />
                                            {{value.title}}
                                        </a>
                                    </div>
                                </div>
                                <!--/row-->
                            </div>
                            <!--/item-->
                            <div class="item">
                                <div class="row">
                                    <div class="col-sm-3" dir-paginate="(index, value) in congTrinhTieuBieus | itemsPerPage:4">
                                        <a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="thumbnail">
                                            <img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive"><br />
                                            {{value.title}}
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!--/item-->
                        </div>
                        <!--/carousel-inner-->
                        <a class="left carousel-control footer-control" href="#myCarousel" data-slide="prev">‹</a>
                        <a class="right carousel-control footer-control" href="#myCarousel" data-slide="next">›</a>
                    </div>
                    <!--/myCarousel-->
                </div>
                <!--/well-->
            </div>
        </div>
    </article>
</section>