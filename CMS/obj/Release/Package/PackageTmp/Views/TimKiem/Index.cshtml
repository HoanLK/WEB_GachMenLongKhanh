
@{
    ViewBag.Title = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="title" ng-controller="showSearchController" ng-show="!(searchText.length > 0)"><i>Xin lỗi! Kết quả tìm kiếm không tồn tại</i></p>

<!--Sản phẩm-->
<div ng-controller="showSearchController">
    <section class="loaisanpham col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <article id="danhsachsanpham" class="danhsachsp col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-show="products.length > 0">Có {{products.length}} sản phẩm</p>
            <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-hide="products.length > 0">Không có sản phầm nào phù hợp</p>
            <div class="cacsanpham col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-show="products.length > 0">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" dir-paginate="(index, value) in products | itemsPerPage:8">
                        <a href="#" ng-click="show(value.idProduct)" data-toggle="modal" data-target="#myModal">
                            <img ng-src="{{value.image}}" alt="{{value.title}}" />
                            <p>
                                <span>{{value.title}}</span><br />
                                Kích thước: {{value.KichThuoc}}
                            </p>
                        </a>
                    </div>
                </div>
            </div>
            <div class="num-page col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <dir-pagination-controls></dir-pagination-controls>
            </div>
        </article>
    </section>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <p class="modal-title" id="myModalLabel">Chi tiết sản phẩm</p>
                </div>
                <div class="modal-body">
                    <img ng-src="{{product.image}}" alt="{{product.title}}" class="col-xs-5 col-sm-5 col-md-5 col-lg-5" />
                    <div class="info col-xs-7 col-sm-7 col-md-7 col-lg-7">
                        <p>
                            <span>mã sản phẩm: </span><span class="masanpham">{{product.title}}</span>
                        </p>
                        <p>
                            <span>kích thước: </span>{{product.KichThuoc}} cm
                        </p>
                        <p>
                            <span>chất liệu: </span> {{product.ChatLieu}}
                        </p>
                        <p ng-bind-html="product.content"></p>
                        <div class="social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-google-plus"></i></a>
                            <a href="#"><i class="fa fa-youtube-play"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <section class="loaisanpham col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding-top:1em">
        <article id="danhsachsanpham" class="danhsachsp col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-show="posts.length > 0">Có {{posts.length}} bài viết</p>
            <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-hide="posts.length > 0">Không có bài viết nào phù hợp</p>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 tongHop" ng-show="posts.length > 0">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 allBaiViet" style="height:10em; margin-bottom:1em;" ng-repeat="(index, value) in posts">
                    <img class="img-responsive" ng-src="{{value.image}}" style="height:100%; float:left; width:40%;" />
                    <a href="/bai-viet/{{value.alias}}-{{value.idPost}}" style="float:right; width:58%; font-size:1.1em; margin-bottom:1em;">{{value.title}}</a>
                    <div class="tomTat" ng-bind-html="value.content | limitTo: 100" style="float:right; width:58%; font-size:0.9em"></div>
                </div>
            </div>
        </article>
    </section>
</div>